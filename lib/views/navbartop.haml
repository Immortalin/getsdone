.container
  .masthead
    %ul.nav.pull-right
      %li
        %a.gauge{:href => "/users/#{@user.name}"}
          %p.large= "@#{@user.name}"
        %a.gauge{:href => url("/users/#{@user.name}/followers")}
          %div.value #{@info[:followers]}
          %div.key followers
        %a.gauge{:href => url("/users/#{@user.name}/following")}
          %div.value #{@info[:follows]}
          %div.key following
        %a.gauge{:href => ""}
          %div.value #{@info[:completed]} 
          %div.key completed
    %ul.nav.nav-pills
      - if @view.nil? or @view == "open"
        %li.active
          %a{:href => "/home?view=open"} open (#{@user.open_actions.length})
      - else
        %li
          %a{:href => "/home?view=open"} open (#{@user.open_actions.length})
      - if @view == "assigned"
        %li.active
          %a{:href => "/home?view=assigned"} assigned (#{@user.assigned_actions.length})
      - else
        %li
          %a{:href => "/home?view=assigned"} assigned (#{@user.assigned_actions.length})
      - if @view == "hashtags"
        %li.active
          %a{:href => "/home?view=hashtags"} hashtags
      - else
        %li
          %a{:href => "/home?view=hashtags"} hashtags
      - if @view == "history"
        %li.active
          %a{:href => "/history"} history
      - else
        %li
          %a{:href => "/history"} history
      - if @view == "statistics"
        %li.active
          %a{:href => "/statistics"} statistics
      - else
        %li
          %a{:href => "/statistics"} statistics
    %hr
.container
  .row
    .col-lg-12.col-md-12.col-sm-12
      %p.since{:id => "counter"} 140
  .row
    .col-lg-8.col-md-8.col-sm-8
      %textarea.form-control{:id => "action", :placeholder => "action", :type => "text", :maxlength => "140", :onkeyup => "count( this, 'counter' ); return false;", :rows => "2"}
    .col-lg-2.col-md-2.col-sm-2
      %button.btn.btn-primary.btn-lg{:onclick => "addAction(false); return false;"} add action
%br

