.container
  .masthead
    %ul.nav.pull-right
      %li
        %a.gauge{:href => "/users/#{@user.name}"}
          %p.large= "@#{@user.name}"
        %a.gauge{:href => url("/users/#{@user.name}/followers")}
          %div.value #{@info[:followers]}
          %div.key followers
        %a.gauge{:href => url("/users/#{@user.name}/following")}
          %div.value #{@info[:follows]}
          %div.key following
        %a.gauge{:href => ""}
          %div.value #{@info[:completed]} 
          %div.key completed
    %ul.nav.nav-pills
      - if @view.nil? or @view == "open"
        %li.active
          %a{:href => "/home?view=open"} open (#{@user.open_actions.length})
      - else
        %li
          %a{:href => "/home?view=open"} open (#{@user.open_actions.length})
      - if @view == "assigned"
        %li.active
          %a{:href => "/home?view=assigned"} assigned (#{@user.assigned_actions.length})
      - else
        %li
          %a{:href => "/home?view=assigned"} assigned (#{@user.assigned_actions.length})
      - if @view == "hashtags"
        %li.active
          %a{:href => "/home?view=hashtags"} hashtags
      - else
        %li
          %a{:href => "/home?view=hashtags"} hashtags
      - if @view == "history"
        %li.active
          %a{:href => "/history"} history
      - else
        %li
          %a{:href => "/history"} history
      - if @view == "statistics"
        %li.active
          %a{:href => "/statistics"} statistics
      - else
        %li
          %a{:href => "/statistics"} statistics
    %hr
    %p.since 140
    %div.form-inline
      %input.input-xxlarge{:id => "action", :placeholder => "action", :type => "text", :maxlength => "140"}
      %button.btn.btn-primary{:onclick => "addAction(); return false;"} add action
    %br

